<h1>Listing buys</h1>

<table>
  <tr>
    <th>Name</th>
    <th>From</th>
    <th>Amout</th>
    <th>Unit price</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @buys.each do |buy| %>
  <tr>
    <td><%= buy.name %></td>
    <td><%= buy.from %></td>
    <td><%= buy.amout %></td>
    <td><%= buy.unit_price %></td>
    <td><%= buy.price %></td>
    <td><%= link_to 'Show', buy %></td>
    <td><%= link_to 'Edit', edit_buy_path(buy) %></td>
    <td><%= link_to 'Destroy', buy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

